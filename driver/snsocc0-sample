#!/bin/sh

# Copy this file to /etc/snsocb for each expected device and name
# it exactly like device name, ie. /etc/snsocb/snsocb1 for device
# /dev/snsocb1. After changing the parameters carefully, remove
# next line.
exit 0

[ "$ACTION" = "add" ] || exit 0

# Remove leading /dev/
DEVNAME=${DEVNAME:5}

echo 40 > /sys/class/snsocb/$DEVNAME/device/irq_coalescing
echo "32M\$1024M" > /sys/class/snsocb/$DEVNAME/device/dma_big_mem
